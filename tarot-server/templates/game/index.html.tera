{% extends "base" %}

{% block body %}
    <h1>List of games</h1>

    <ul>
        {% for g in games %}
            <li>
                {{ g.uuid }}
                - {{ g.players | length }}/{{ g.max_players_count }} players
                - <a href="/game/play/{{ g.uuid }}">Join</a>
            </li>
        {% endfor %}
    </ul>
{% endblock body %}
